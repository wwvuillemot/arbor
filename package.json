{
  "name": "arbor",
  "version": "0.1.0",
  "description": "A local-first, AI-powered writing assistant",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:server": "tsx watch server/index.ts",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "drizzle-kit migrate",
    "db:rollback": "drizzle-kit rollback",
    "db:create": "drizzle-kit generate",
    "db:seed": "tsx server/db/seed.ts",
    "export:markdown": "tsx server/scripts/export-markdown.ts",
    "api:generate": "orval --config orval.config.ts",
    "api:watch": "orval --config orval.config.ts --watch",
    "tauri": "tauri"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "axios": "^1.6.0",
    "@tanstack/react-query": "^5.17.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.4.0",
    "orval": "^6.30.0",
    "tsx": "^4.7.0",
    "prettier": "^3.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}