{
  "name": "arbor",
  "version": "0.1.0",
  "description": "A local-first, AI-powered writing assistant",
  "private": true,
  "scripts": {
    "dev": "cd apps/web && next dev --turbo --port 3847",
    "dev:api": "API_PORT=3848 REDIS_URL=redis://redis.arbor.local:6379 DATABASE_URL=postgresql://arbor:local_dev_only@postgres.arbor.local:5432/arbor_dev CORS_ORIGIN=http://app.arbor.local tsx watch apps/api/src/api/index.ts",
    "dev:server": "tsx watch apps/api/src/index.ts",
    "dev:desktop": "tauri dev",
    "build": "cd apps/web && next build",
    "build:desktop": "tauri build",
    "start": "cd apps/web && next start",
    "lint": "cd apps/web && next lint",
    "lint:fix": "cd apps/web && next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:watch": "vitest",
    "test:coverage": "pnpm run test:coverage:unit && pnpm run test:coverage:integration",
    "test:coverage:unit": "vitest run --config vitest.config.ts --coverage && cd apps/web && vitest run --config vitest.config.ts --coverage",
    "test:coverage:integration": "vitest run --config vitest.integration.config.ts --coverage && cd apps/web && vitest run --config vitest.integration.config.ts --coverage",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx apps/api/src/db/migrate.ts",
    "db:migrate:up": "tsx apps/api/src/db/migrate.ts",
    "db:migrate:rollback": "drizzle-kit drop",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx apps/api/src/db/seed.ts",
    "export:markdown": "tsx apps/api/src/scripts/export-markdown.ts",
    "api:generate": "orval --config orval.config.ts",
    "api:watch": "orval --config orval.config.ts --watch",
    "tauri": "tauri"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@fastify/cors": "^10.0.1",
    "@pothos/core": "^4.3.0",
    "@tanstack/react-query": "^5.62.11",
    "@trpc/client": "^11.0.0",
    "@trpc/react-query": "^11.0.0",
    "@trpc/server": "^11.0.0",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "dataloader": "^2.2.3",
    "drizzle-orm": "^0.38.3",
    "fastify": "^5.2.0",
    "graphql": "^16.9.0",
    "lucide-react": "^0.469.0",
    "minio": "^8.0.6",
    "next": "^15.1.6",
    "next-intl": "^3.26.5",
    "next-themes": "^0.4.6",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "redis": "^5.10.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@tauri-apps/cli": "^2.2.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.2",
    "@types/minio": "^7.1.1",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.1.6",
    "happy-dom": "^20.5.0",
    "jsdom": "^28.0.0",
    "orval": "^7.3.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "optionalDependencies": {
    "@parcel/watcher": "^2.5.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
