{
  "name": "arbor",
  "version": "0.1.0",
  "description": "A local-first, AI-powered writing assistant",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:server": "tsx watch server/index.ts",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:push": "drizzle-kit push:pg",
    "db:generate": "drizzle-kit generate:pg",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx server/db/seed.ts",
    "export:markdown": "tsx server/scripts/export-markdown.ts",
    "api:generate": "orval --config orval.config.ts",
    "api:watch": "orval --config orval.config.ts --watch",
    "tauri": "tauri"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "axios": "^1.6.0",
    "@tanstack/react-query": "^5.17.0",
    "drizzle-orm": "^0.29.0",
    "postgres": "^3.4.0",
    "fastify": "^4.25.0",
    "@trpc/server": "^10.45.0",
    "@trpc/client": "^10.45.0",
    "@trpc/react-query": "^10.45.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.4.0",
    "orval": "^6.30.0",
    "tsx": "^4.7.0",
    "prettier": "^3.2.0",
    "drizzle-kit": "^0.20.0",
    "vitest": "^1.2.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@playwright/test": "^1.41.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.0",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}